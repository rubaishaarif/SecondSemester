//game
//random numbers generation
#include <iostream>
using namespace std;
class Game{
    int yourP; //your players
    int Yteam; //your team
    int Eteam; //enemy team
    public:
    Game()
    {
        srand(time(NULL));
        yourP= rand() % 10 + 1;
        Yteam =0;
        Eteam = 0; }
    void Play()
    {
        cout<<"your total players: "<<yourP<<endl;
        for(int i =0; i<yourP;i++)
        {
            int n1 =  rand() % 10 + 1;
            int n2 =  rand() % 10 + 1;
            cout<<"n1 = "<<n1<<endl;
            cout<<"n2 = "<<n2<<endl;
            if(n1==n2)
            { cout<<"Enemy got hit by your team!\n";
            Yteam++; }
            else
            { cout<<"You got hit by the enemy team!"<<endl;
            Eteam++; }
        }
        if(Yteam>Eteam)
        cout<<"Game over! Your team won!"<<endl;
        else if(Yteam<Eteam)
        cout<<"Game over! Enemy team won!"<<endl;
        else
        cout<<"tie\n";
    }
};
int main() {
Game g;
g.Play();
    return 0;
}
