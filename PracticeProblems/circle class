//example
#include <iostream>
#include <string>
using namespace std;
class Circle{
private:
    double radius;
    string color;
public:
    Circle(double r, string c)
    {
        radius = r;
        color = c;
    }
    double getRadius()
    {
        return radius;
    }
    double getArea()
    {
        return 3.14159 * radius * radius;
    }
    void setColor(string c)
    {
        color = c;
    }
    void setRadius(double r)
    {
        radius = r;
    }
};
int main()
{
    Circle c1(1.2, "blue");
    Circle c2(3.4, "green");
    cout << c1.getArea() << endl;
    cout << c2.getArea() << endl;
    c1.setRadius(5.5);
    c2.setRadius(6.6);
    cout << c1.getArea() << endl;
    cout << c2.getArea() << endl;
    return 0; }
